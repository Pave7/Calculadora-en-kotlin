<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <!-- son los colores de los botones de la calculadora configurado en colors.xml y los styles.xml -->
    <TextView
        android:id ="@+id/tvExpresiones"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="40sp" />

    <TextView
        android:id ="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- son los botones que conforman la calculadora y el posicionamiento que va a tener -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
            android:id="@+id/tvLimpiar"
            style="@style/ActionButtonStyle"
            android:text="CE"/>
            <TextView
                android:id="@+id/tvAbierto"
                style="@style/ActionButtonStyle"
                android:text="("/>
            <TextView
                android:id="@+id/tvCerrado"
                style="@style/ActionButtonStyle"
                android:text=")"/>
            <TextView
                android:id="@+id/tvDivision"
                style="@style/ActionButtonStyle"
                android:text="/"/>


        </LinearLayout>
        <!-- son los botones que conforman la calculadora y el posicionamiento que va a tener -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSiete"
                style="@style/NumberButtonStyle"
                android:text="7"/>
            <TextView
                android:id="@+id/tvOcho"
                style="@style/NumberButtonStyle"
                android:text="8"/>
            <TextView
                android:id="@+id/tvNueve"
                style="@style/NumberButtonStyle"
                android:text="9"/>
            <TextView
                android:id="@+id/tvMultiplicacion"
                style="@style/ActionButtonStyle"
                android:text="*"/>

        </LinearLayout>
        <!-- son los botones que conforman la calculadora y el posicionamiento que va a tener -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCuatro"
                style="@style/NumberButtonStyle"
                android:text="4"/>
            <TextView
                android:id="@+id/tvCinco"
                style="@style/NumberButtonStyle"
                android:text="5"/>
            <TextView
                android:id="@+id/tvSeis"
                style="@style/NumberButtonStyle"
                android:text="6"/>
            <TextView
                android:id="@+id/tvMenos"
                style="@style/ActionButtonStyle"
                android:text="-"/>

    </LinearLayout>
        <!-- son los botones que conforman la calculadora y el posicionamiento que va a tener -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvUno"
                style="@style/NumberButtonStyle"
                android:text="1"/>
            <TextView
                android:id="@+id/tvDos"
                style="@style/NumberButtonStyle"
                android:text="2"/>
            <TextView
                android:id="@+id/tvTres"
                style="@style/NumberButtonStyle"
                android:text="3"/>
            <TextView
                android:id="@+id/tvMas"
                style="@style/ActionButtonStyle"
                android:text="+"/>

        </LinearLayout>
<!-- son los botones que conforman la calculadora y el posicionamiento que va a tener -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDot"
               style="@style/NumberButtonStyle"
                android:text="."/>
            <TextView
                android:id="@+id/tvZero"
                style="@style/NumberButtonStyle"
                android:text="0"/>
            <!-- Es la inserciÃ³n de un icono que representa la correccion de un numero o signo antes de ser ejecutado-->
            <ImageView
                android:id="@+id/tvBack"
                style="@style/NumberButtonStyle"
                android:src="@drawable/icono"
                android:scaleType="center"/>
            <TextView
                android:id="@+id/tvEquals"
                style="@style/ActionButtonStyle"
                android:text="="/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>